<p id="notice"><%= notice %></p>

<h1>Адреси</h1>

<table>
  <thead>
    <tr>
      <th>Вулиця</th>
      <th>Номер будинку</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @addresses.each do |address| %>
      <tr>
        <td><%= address.street %></td>
        <td><%= address.house_number %></td>
        <td><%= link_to 'Показати', address %></td>
        <td><%= link_to 'Редагувати', edit_address_path(address) %></td>
        <td><%= link_to 'Видалити', address, method: :delete, data: { confirm: 'Ви впевнені?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Додати адресу', new_address_path %>
