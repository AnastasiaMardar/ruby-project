<p id="notice"><%= notice %></p>

<h1>Користувачі</h1>

<table>
  <thead>
    <tr>
      <th>Ім'я</th>
      <th>Прізвище</th>
      <th>Вік</th>
      <th>Номер телефону</th>
      <th>Країна</th>
      <th>Вулиця</th>
      <th>Номер будинку</th>
      <th>Створено</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @people.each do |person| %>
      <tr>
        <td><%= person.name %></td>
        <td><%= person.surname %></td>
        <td><%= person.age %></td>
        <td><%= person.phone %></td>
        <td><%= person.country %></td>
        <td><%= person.address.street %></td>
        <td><%= person.address.house_number %></td>
        <td><%= person.created_at %></td>
        <td><%= link_to 'Показати', person %></td>
        <td><%= link_to 'Редагувати', edit_person_path(person) %></td>
        <td><%= link_to 'Видалити', person, method: :delete, data: { confirm: 'Ви впевнені?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Додати користувача', new_person_path %>
